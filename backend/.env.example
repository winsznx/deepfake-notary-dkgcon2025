# Server Configuration
PORT=3001
NODE_ENV=development

# Database
DATABASE_URL="file:./dev.db"

# DKG Configuration
# Local development: hardhat1:31337 with localhost:8900
# Testnet: otp:20430 (NeuroWeb Testnet)
# Mainnet: otp:2043 (NeuroWeb Mainnet)
DKG_NODE_ENDPOINT=http://localhost
DKG_NODE_PORT=8900
DKG_BLOCKCHAIN=hardhat1:31337
# IMPORTANT: Replace with your own private key!
# This is the default Hardhat test account private key (UNSAFE for production)
DKG_PRIVATE_KEY=

# x402 Micropayment Configuration
# Enable/disable x402 gating for high-confidence fact-checks
X402_ENABLED=true

# Wallet address to receive USDC payments
# Use Base Sepolia address for testing
X402_WALLET_ADDRESS=0xYourWalletAddress

# Network configuration
# Options: base-sepolia (testnet), base (mainnet)
X402_NETWORK=base-sepolia

# Facilitator URL for testnet (free to use)
X402_FACILITATOR_URL=https://x402.org/facilitator

# Pricing tiers (in USD)
X402_PRICING_LOW=0.0000      # < 0.7 confidence (free)
X402_PRICING_MEDIUM=0.0001   # 0.7-0.85 confidence
X402_PRICING_HIGH=0.0003     # > 0.85 confidence

# Confidence thresholds for pricing
X402_LOW_CONFIDENCE_THRESHOLD=0.7
X402_HIGH_CONFIDENCE_THRESHOLD=0.85

# For mainnet (production), set these:
# X402_NETWORK=base
# X402_FACILITATOR_URL= (leave empty to use CDP facilitator)
# CDP_API_KEY_ID=your-cdp-api-key-id
# CDP_API_KEY_SECRET=your-cdp-api-key-secret

# Deepfake Detection
DEEPFAKE_MODEL_PATH=./models/xception_weights.pth
DEEPFAKE_CONFIDENCE_THRESHOLD=0.5

# Staking Configuration
MIN_STAKE_AMOUNT=10
MAX_STAKE_AMOUNT=500
REWARD_PERCENTAGE=15
SLASH_PERCENTAGE=10
CONSENSUS_THRESHOLD=0.7
